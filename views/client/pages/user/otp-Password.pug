extends ../../layouts/default.pug
include ../../mixins/alert.pug

block style
    link(rel="stylesheet" href="/css/user-register.css")

block main
    +alert-error(3000)
    .container.my-5
        .row.justify-content-center
            .col-12.col-md-8.col-lg-6
                .card
                    h1.text-center Nhập Mã OTP xác thực 
                    form(action="/user/password/otp" method="POST")
                        .form-group
                            label(for="email") Email
                            input(
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                required
                                value=email
                                readonly
                            )
                        .form-group
                            label(for="otp") Mã OTP
                            input(
                                type="text"
                                class="form-control"
                                id="otp"
                                name="otp"
                                required
                                
                            )
                        .form-group
                            button(
                                type="submit"
                                class="btn btn-primary btn-block"
                            ) Gửi mail xác nhận
                    