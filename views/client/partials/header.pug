include ../mixins/sub-menu.pug
header.header
    .container
        .row.align-items-center
            .col-lg-3.col-12
                .inner-logo
                    a(href="/")
                        img(src="/images/buygo.svg" alt="Logo")
            .col-lg-4.col-12
                form(action="/search" method="GET")
                    .form-group.d-flex.mb-0
                        input(
                            type="text"
                            placeholder="Nhập từ khóa..."
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm
            .col-lg-5.col-12
                .inner-menu
                    ul
                        li
                            a(href="/") Trang chủ
                        li.sub-menu
                            - const pathProduct = "/products"
                            a(href=pathProduct) Sản phẩm
                            +sub-menu(layoutProductsCategory, pathProduct)
                        li.cart-menu
                            a(href="/cart" class="cart-icon") 
                                img(src="/images/Shopping.cart.svg" alt="Giỏ hàng")
                                if miniCart && miniCart.totalQuantity > 0
                                    span.cart-quantity #{miniCart.totalQuantity}
                        li 
                            a(href="/user/login") Đăng nhập
                        li 
                            a(href="/user/register") Đăng ký